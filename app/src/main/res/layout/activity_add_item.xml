<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddItem">

    <TextView
        android:id="@+id/name"
        android:layout_width="161dp"
        android:layout_height="44dp"
        android:layout_marginVertical="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="30dp"
        android:text="Name:"/>

    <TextView
        android:id="@+id/group"
        android:layout_width="161dp"
        android:layout_height="44dp"
        android:layout_marginVertical="200dp"
        android:layout_marginLeft="30dp"
        android:text="Group:"/>

    <TextView
        android:id="@+id/price"
        android:layout_width="161dp"
        android:layout_height="44dp"
        android:layout_marginVertical="260dp"
        android:layout_marginLeft="30dp"
        android:text="Price:"/>

    <TextView
        android:id="@+id/pic_name"
        android:layout_width="161dp"
        android:layout_height="44dp"
        android:layout_marginVertical="319dp"
        android:layout_centerHorizontal="true"
        android:text="pic name"/>

    <EditText
        android:id="@+id/item_name"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginVertical="100dp"
        />

    <EditText
        android:id="@+id/price_val"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginVertical="260dp"
        android:inputType="numberDecimal"
        />

    <Spinner
        android:id="@+id/group_type"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginVertical="200dp"
        android:scrollbarSize="100dp"/>



    <Button
        android:id="@+id/pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="370dp"
        android:text="pic"
        android:onClick="addPhoto"/>

    <Button
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="450dp"
        android:text="add"
        android:onClick="addButton"/>

</RelativeLayout>